.form-wrapper.text-center.row
  %h2 Sign up

  = form_for(resource, as: resource_name, class: 'form-horizontal', url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    .form-group
      = f.label :email
      %br
      = f.email_field :email, autofocus: true, required: true

    .form-group
      = f.label :user_name
      %br
      = f.text_field :user_name, required: true

    .form-group
      = f.label :password
      - if @minimum_password_length
        %em (#{@minimum_password_length} characters minimum)
        %br
      = f.password_field :password, autocomplete: "off", required: true

    .form-group
      = f.label :password_confirmation
      %br
      = f.password_field :password_confirmation, autocomplete: "off", required: true

    .form-group
      = f.submit "Sign up", class: 'btn-success'

  = render "devise/shared/links"