.pictures-wrapper.row
  .picture
    .image.center-block= image_tag @picture.image.url(:medium), class: 'img-responsive', alt: @picture.description
    = form_for @picture, class: 'form-horizontal text-center', url: picture_path(@picture), method: :patch do |f|
      .form-group.text-center
        = f.label :description
        = f.text_field :description
      .form-group.text-center
        = f.submit 'Update Description', class: 'btn-success'
    .text-center.edit-links
      = link_to "Delete Post", picture_path(@picture), method: :delete, data: { confirm: "Are you sure you want to delete this post?" }
      |
      = link_to "Cancel", picture_path(@picture)