.pictures-wrapper.row
  .picture
    .image.center-block= image_tag @picture.image.url(:medium), class: 'img-responsive', alt: @picture.description
    = form_for @picture, class: 'form-horizontal', url: picture_path(@picture), method: :patch do |f|
      .form-group
        = f.label :description
        = f.text_field :description
      .form-group
        = f.submit 'Update Description', class: 'btn-success'